@model TournamentWeb.Models.ViewModels.UserProfileViewModel


<button onclick="hidehow()">Show Tournaments</button>
<div class="flex-View">
    <div class="side" id="side">
        @await Component.InvokeAsync("UserTournaments")
    </div>
    <div class="main">

        <div id="profile" class=" m-1 p-1">
            <h1> THis is the profile page!</h1>

            @if (Model.ProfileImage == null)
            {
                <img src="~/images/profile/default-user-icon.jpg" /><br />
            }
            else
            {
                <img src="~/images/profile/@Model.ProfileImage" alt="Alternate Text" /><br />
            }
            <div class="playerinfocontainor">
                <h5>Username</h5>
                <h4>@Model.UserName</h4>
            </div>
            <div class="playerinfocontainor">
                <h5>Points</h5>
                <h4> @Model.Points</h4>
            </div>
            <div class="playerinfocontainor">
                <h5>Discord name</h5>
                <h4> @Model.UserDiscord </h4>
            </div>
            <div class="playerinfocontainor">
                <h5>Email</h5>
                <h4>@Model.Email</h4>
            </div>
            <div class="profilebtn">
                <div class="profilegreenbtn">
                    <button asp-controller="UserProfile" asp-action="Edit" class="orangebutton">Edit Profile</button> <br />
                </div>
                <div class="profileblackbtn">
                    <form asp-action="Delete">
                        <input type="hidden" name="Id"
                               value="@Model.Id" />
                        <input type="hidden" name="returnUrl"
                               value="@Model.ReturnUrl" />
                        <button type="submit" class="Blackbutton"
                                onclick="return confirm('Are you sure you want to delete your account?')">
                            Delete
                        </button>

                    </form>
                </div>
        </div>
        </div>
    </div>
    </div>




    <script>

        function hidehow() {
            var x = document.getElementById("side")
            if (x.style.display === "none") {
                x.style.display = "block";
            } else {
                x.style.display = "none";
            }
        }
    </script>



    <style>
        .profilebtn{
            display:flex;
            flex-direction:row;
            justify-content:center,space-around;
            margin-top: 2%;
           
        }
        .playerinfocontainor {
            background-color: white;
            width: 25%;
            border-radius: 20px;
            margin-left: 37%;
            padding: 2px;
            margin-top: 1%;
        }
            

            img {
                height: 200px;
                width: auto;
                border-radius: 50%;
            }

        #profile {
            text-align: center;

        }
  
        button:hover {
            color: orange;
        }

        .flex-View {
            width: 100%;
            height: 100vh;
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            justify-content:center;
        }

            .flex-View > .side {
                width: 20%;
                display: none;
                background-color: black;
                border-right: 4px solid black;
            }

            .flex-View > .main {
                background-color: #22282a;
                color:black;
                flex-grow: 1;
                height: auto;
            }

        #profile {
            text-align: center;
        }
        
    </style>
